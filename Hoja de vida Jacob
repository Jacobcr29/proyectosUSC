        <h2>Experiencia Laboral</h2>
       







 <form>
      <label for="item">Ingresa tu Experiencia Laboral:</label>
      <input type="text" name="item" id="item">
      <button id="boton">Agregar</button>
    </form>

    <ul id="lista">

    </ul>

    <script>
      const lista = document.getElementById("lista");
      const texto = document.getElementById("item");
      const boton = document.getElementById("boton");

      boton.addEventListener( 'click', (event) => {       
         event.preventDefault();

         const newItem = texto.value;
         texto.value = '';

         const listItem = document.createElement("li");
         const listText = document.createElement("span");
         const listBtn = document.createElement("button");

         listItem.appendChild(listText);
         listText.textContent = newItem;

         listItem.appendChild(listBtn);
         listBtn.textContent = "delete";



         lista.appendChild(listItem)

         listBtn.addEventListener( 'click', () => {
          lista.removeChild(listItem);

         });


         texto.focus();


      }   );
    </script>

    
   







        <h2>Habilidades</h2>
         <form>
      <label for="itemSkills">Ingresa tus habilidades:</label>
      <input type="text" name="itemSkills" id="itemSkills">
      <button id="botonSkills">Agregar</button>
      </form>
        

    <ul id="listaSkills">
        
    </ul>

    <script>
      const listaSkills = document.getElementById("listaSkills");
      const textoSkills = document.getElementById("itemSkills");
      const botonSkills = document.getElementById("botonSkills");

      botonSkills.addEventListener( 'click', (event) => {       
         event.preventDefault();

         const newItemSkills = textoSkills.value;
         textoSkills.value = '';

         const listItemSkills = document.createElement("li");
         const listTextSkills = document.createElement("span");
         const listBtnSkills = document.createElement("button");

         listItemSkills.appendChild(listTextSkills);
         listTextSkills.textContent = newItemSkills;

         listItemSkills.appendChild(listBtnSkills);
         listBtnSkills.textContent = "delete";



         listaSkills.appendChild(listItemSkills)

         listBtnSkills.addEventListener( 'click', () => {
          listaSkills.removeChild(listItemSkills);

         });


         textoSkills.focus();


      }   );

    </script>

